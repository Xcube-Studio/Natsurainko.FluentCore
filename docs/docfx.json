{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "**/Natsurainko.FluentCore.dll"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "**.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "FluentCore",
      "_appTitle": "FluentCore",
      "_enableSearch": true,
      "pdf": true
    }
  }
}